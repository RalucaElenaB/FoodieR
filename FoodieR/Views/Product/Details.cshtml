@model FoodieR.Models.ProductViewModel



@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Name</h1>

<div>
    
    <hr />
    <dl class="row">
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Id)
        </dd>
    </dl>
</div>
<div>
    @*<a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn btn-success">Edit</a>*@
   
    <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-productId="@Model?.ProductId" class="btn btn-success"> + Add to cart</a>
     <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>



<h2 class="text-center mb-5 p-5">Check Product Reviews</h2>


<p>
    <a asp-controller="Review" asp-action="Create" asp-route-id="@Model?.ProductId" class="btn btn-primary">Create Review</a>
</p>

@foreach (var item in Model.Reviews)
{
    await Html.RenderPartialAsync("_Review", item);
}


